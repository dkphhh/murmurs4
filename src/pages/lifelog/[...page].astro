---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostEntry from "../../components/PostEntry.astro";
import { getCategoryPosts } from "../../../utils/process-posts.ts";
import type { GetStaticPaths, Page } from "astro";
import Pagination from "../../components/Pagination.astro";
import PageTitle from "../../components/PageTitle.astro";

// 筛选公开文章

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getCategoryPosts("lifelog");

  return paginate(posts, {
    pageSize: 10,
  });
};

const { page } = Astro.props as { page: Page<PostEntry> };

const allPosts = page.data;
---

<BaseLayout
  title={`Page - ${page.currentPage} - Dkphhh的生活记录`}
  description="Dkphhh 的生活记录和部分独立页面"
  keywords={["收藏夹", "文章", "更新", "故事"]}
>
  <div class="flex-col-center h-full gap-8">
    <PageTitle category="lifelog" title="Other Pages" />
    <div class="article-list-container">
      {allPosts.map((post) => <PostEntry post={post} />)}
    </div>
    <Pagination
      currentPage={page.currentPage}
      lastPage={page.lastPage}
      pathName="lifelog"
    />
  </div>
</BaseLayout>
