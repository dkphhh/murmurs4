---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostEntry from "../components/PostEntry.astro";
import { getCategoryPosts } from "../../utils/process-posts.ts";

// 筛选公开文章

const writingPosts = await getCategoryPosts("writing");
const posts = writingPosts.slice(0, 10);
---

<BaseLayout
  title="Murmurs from Dkphhh | 微博客"
  description="一些闲言碎语和生活记录，来自 Dkphhh。"
  keywords={["murmurs", "dkphhh", "博客", "文章", "故事"]}
>
  <div class="flex-col-center h-full gap-8">
    <div class="article-list-container">
      {posts.map((post) => <PostEntry post={post} />)}
      <div class="flex-center w-full pt-2 pb-4">
        <a
          class="btn w-fit px-4 py-8 text-xl font-light tracking-wide italic btn-ghost"
          href="/writing/2">Read More……</a
        >
      </div>
    </div>
  </div>
</BaseLayout>
